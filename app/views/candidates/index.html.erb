<div class="row">
<h2>Candidates</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', candidate %></li>
              <li><%= link_to 'Edit', edit_candidate_path(candidate) %></li>
              <li><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

</div>
<br>

<div class="row">
    <div class="col-md-6">
        <div><%= link_to 'New Candidate', new_candidate_path, class: "btn btn-primary active", role: "button" %></div>
    </div>
</div>

<br />


<div class="row">
    <div class="col-md-6">
        <div class="jumbotron">
        <h2>Ready for the Election!</h2>
        <div><%= link_to 'Start Election', elections_index_path, class: "btn btn-info btn-lg active", role: "button" %></div>
        </div>
    </div>
</div>
